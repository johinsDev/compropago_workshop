<%= form_with model: @purchase do |f| %>
  <%= f.hidden_field :product_id %>
  <div class="form-group">
    <%= f.label :store, "Elige una tienda de pago para para realizar tu pago" %>
    <%= f.select :store do %>
      <option value="OXXO">OXXO</option>
      <option value="SEVEN_ELEVEN">7eleven</option>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.email_field :email, placeholder:"Correo electronico", class: "form-control", required: true%>
    <%= f.text_field :name, placeholder:"Nombre del comprador", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Comprar producto", class:"btn btn-success"%>
  </div>
<% end %>